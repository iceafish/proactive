{
  "extends": "./configs/ts/base.tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "@core": ["core"],
      "@core/*": ["core/*"],
      "@common/*": ["common/*"],
      "@protocol": ["protocol"],
      "@protocol/*": ["protocol/*"],
      "@vinci": ["vinci"],
      "@vinci/*": ["vinci/*"],
      "@component/*": ["component/*"],
      "@container/*": ["container/*"]
    }
  },
  "include": [
    "src"
  ]
}
