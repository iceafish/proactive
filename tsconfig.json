{
  "extends": "./configs/ts/base.tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "@core": ["core"],
      "@core/*": ["core/*"],
      "@common/*": ["common/*"],
      "@service": ["service"],
      "@protocol": ["protocol"],
      "@protocol/*": ["protocol/*"],
      "@component/*": ["component/*"]
    }
  },
  "include": [
    "src"
  ]
}
